{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [
      "jest",
      "node"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src"
  },
  "paths": {
    "@app/*": "src/*"
  },
  "exclude": [
    "**/*.spec.ts",
    "examples",
    "src/test/importTestTarget*"
  ]
}
